{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@shared/config": ["dist/shared/config/index"],
      "@shared/config/*": ["dist/shared/config/*"],
      "@shared/entities": ["dist/shared/entities/index"],
      "@shared/entities/*": ["dist/shared/entities/*"],
      "@shared/types": ["dist/shared/types/index"],
      "@shared/types/*": ["dist/shared/types/*"],
      "@shared/logger": ["dist/shared/logger/index"],
      "@shared/logger/*": ["dist/shared/logger/*"]
    }
  }
}
