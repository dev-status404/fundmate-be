{
  "openapi": "3.0.4",
  "info": {
    "title": "Interaction Service API",
    "version": "1.0.0",
    "description": "상호작용(조회 기록 및 좋아요) 기능을 제공하는 마이크로서비스입니다."
  },
  "servers": [
    {
      "url": "https://fundmate.store/api/interactions",
      "description": "Production 서버"
    }
  ],
  "tags": [
    {
      "name": "interactions",
      "description": "프로젝트 좋아요 등록/취소 및 조회 기록 관리 API"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {
      "userId": {
        "name": "user_id",
        "in": "query",
        "description": "사용자 고유 ID",
        "required": true,
        "schema": {
          "type": "integer"
        }
      },
      "projectId": {
        "name": "project_id",
        "in": "query",
        "description": "프로젝트 고유 ID",
        "required": true,
        "schema": {
          "type": "integer"
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "잘못된 요청",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "인증 실패 (토큰 없음 또는 만료)",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "InternalError": {
        "description": "서버 내부 오류",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      }
    },
    "schemas": {
      "LikeRequest": {
        "type": "object",
        "required": ["user_id", "project_id"],
        "properties": {
          "user_id": {
            "type": "integer",
            "example": 42
          },
          "project_id": {
            "type": "integer",
            "example": 123
          }
        }
      },
      "ViewHistoryRequest": {
        "type": "object",
        "required": ["user_id", "project_id"],
        "properties": {
          "user_id": {
            "type": "integer",
            "example": 42
          },
          "project_id": {
            "type": "integer",
            "example": 123
          }
        }
      },
      "ViewHistory": {
        "type": "object",
        "properties": {
          "view_id": {
            "type": "integer",
            "example": 987
          },
          "user_id": {
            "type": "integer",
            "example": 42
          },
          "project_id": {
            "type": "integer",
            "example": 123
          },
          "viewed_at": {
            "type": "string",
            "format": "date-time",
            "example": "2025-07-17T13:45:00Z"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "INVALID_REQUEST"
          },
          "message": {
            "type": "string",
            "example": "필수 파라미터가 누락되었습니다."
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/like": {
      "post": {
        "tags": ["interactions"],
        "summary": "프로젝트 좋아요 등록",
        "description": "사용자가 특정 프로젝트에 좋아요를 추가합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LikeRequest"
              },
              "examples": {
                "sample": {
                  "summary": "좋아요 등록 요청 예시",
                  "value": {
                    "user_id": 42,
                    "project_id": 123
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "좋아요 등록 성공"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      },
      "delete": {
        "tags": ["interactions"],
        "summary": "프로젝트 좋아요 취소",
        "description": "사용자가 특정 프로젝트에 대한 좋아요를 취소합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/userId"
          },
          {
            "$ref": "#/components/parameters/projectId"
          }
        ],
        "responses": {
          "204": {
            "description": "좋아요 취소 성공 (콘텐츠 없음)"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      }
    },
    "/views": {
      "post": {
        "tags": ["interactions"],
        "summary": "조회 기록 등록",
        "description": "사용자가 프로젝트 상세 페이지를 조회한 기록을 남깁니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ViewHistoryRequest"
              },
              "examples": {
                "sample": {
                  "summary": "조회 기록 등록 요청 예시",
                  "value": {
                    "user_id": 42,
                    "project_id": 123
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "조회 기록 등록 성공"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      },
      "get": {
        "tags": ["interactions"],
        "summary": "조회 기록 목록 조회",
        "description": "특정 사용자의 조회 기록을 시간 역순으로 반환합니다.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/userId"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 기록 리스트 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ViewHistory"
                  }
                },
                "examples": {
                  "sample": {
                    "summary": "예시 응답",
                    "value": [
                      {
                        "view_id": 987,
                        "user_id": 42,
                        "project_id": 123,
                        "viewed_at": "2025-07-17T13:45:00Z"
                      },
                      {
                        "view_id": 988,
                        "user_id": 42,
                        "project_id": 124,
                        "viewed_at": "2025-07-17T14:10:00Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "500": {
            "$ref": "#/components/responses/InternalError"
          }
        }
      }
    }
  }
}
